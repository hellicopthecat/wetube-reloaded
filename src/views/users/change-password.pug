extends ../base

block contents 
    if errorMessage   
        span=errorMessage
    form(method="POST")
        input(name="oldPW" type="password" placeholder="Old Password" minlength=4 required)
        input(name="newPW" type="password" placeholder="New Password" minlength=4 required)
        input(name="checkpass" type="password" placeholder="Checking New Password" minlength=4 required)
        input(type="submit" value="JOIN")
        input(type="button" value="CANCEL" onclick="location.href=`/`")