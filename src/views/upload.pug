extends base

block content
    h3 Upload Video
    if errorMessage     
        span=errorMessage
    form(method="post")
        input(name="title" type="text" placeholder="Title" maxlength="40" required)
        input(name="description" type="text" placeholder="Description" minlength="10" required)
        input(name="hashtags" type="text" placeholder="Hashtags, separated by comma" required)
        input(type="submit" value="Upload Video")
        input(type="button" value="Cancel" onClick="location.href='/'")
            

